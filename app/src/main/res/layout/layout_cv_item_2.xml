            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
